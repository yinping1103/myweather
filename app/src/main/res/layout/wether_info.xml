<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/main_title"/>

    <!-- 主体界面-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        >
        <!--今日天气上部-->
        <RelativeLayout
            android:id="@+id/weather_today"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip">
            <!--城市名称-->
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15.0dp"
                android:singleLine="true"
                android:text="北京"
                android:textColor="@android:color/white"
                android:textSize="40.0sp"/>
            <!--发布时间-->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/city"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15.0dp"
                android:singleLine="true"
                android:text="今天16:20发布"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"/>
            <!--湿度-->
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/time"
                android:layout_marginLeft="15.0dp"
                android:singleLine="true"
                android:text="湿度:51%"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"/>
            <!--当前温度-->
            <TextView
                android:id="@+id/temperature_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/humidity"
                android:layout_marginLeft="15.0dp"
                android:singleLine="true"
                android:text="当前温度: 5℃"
                android:textColor="@android:color/white"
                android:textSize="15.0sp"/>

            <!--PM2.5整体信息-->
            <LinearLayout
                android:id="@+id/pm2.5_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <!--pm2.5带图详细信息-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12.0dp"
                    android:paddingBottom="6.0dp"
                    android:paddingRight="12.0dp"
                    android:paddingTop="6.0dp">
                    <!--pm文字详情-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--PM2.5-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="PM2.5"
                            android:textColor="@android:color/white"
                            android:textSize="12.0sp" />
                        <!--PM值-->
                        <TextView
                            android:id="@+id/pm_data"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:text="220"
                            android:textColor="@android:color/white"
                            android:textSize="30.0sp" />
                    </LinearLayout>
                    <!--PM图片-->
                    <ImageView
                        android:id="@+id/pm25_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dp"
                        android:src="@drawable/biz_plugin_weather_0_50"/>
                </LinearLayout>
                <!--污染等级-->
                <TextView
                    android:id="@+id/pm25_quality"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="重度污染"
                    android:textColor="@android:color/white"
                    android:textSize="20.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <!--今日天气详情界面-->
        <RelativeLayout
            android:id="@+id/weather_today_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/humidity"
            android:layout_centerInParent="true"
            android:layout_marginTop="100.0dp">

            <!--今日天气图片事例-->
            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/biz_plugin_weather_qing" />
            <!--今日星期-->
            <TextView
                android:id="@+id/week_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@id/weather_img"
                android:singleLine="true"
                android:text=" 3日 星期三"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"/>
            <!--温度范围-->
            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/week_today"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@id/weather_img"
                android:singleLine="true"
                android:text=" 高温2℃~低温7℃"
                android:textColor="@android:color/white"
                android:textSize="25sp"/>
            <!--天气状况-->
            <TextView
                android:id="@+id/climate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/temperature"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@id/weather_img"
                android:singleLine="true"
                android:text="多云转晴"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"/>
            <!--风力情况-->
            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/climate"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@id/weather_img"
                android:singleLine="true"
                android:text="微风"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"/>


        </RelativeLayout>

        <!--一周天气信息-->
        <include
            android:id="@+id/week"
            layout="@layout/week_weather"/>

        <!--其他广告-->
    </LinearLayout>

</RelativeLayout>
